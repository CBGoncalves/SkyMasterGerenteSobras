<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<AnchorPane fx:controller="com.projetos.skymaster.skymastergerentesobras.controllers.TelaInicialController"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="root"
            prefWidth="900.0" prefHeight="600.0">

    <stylesheets>
        <URL value="@../css/telaInicial.css"/>
    </stylesheets>

    <fx:include source="NavigationBar.fxml" />

    <ImageView
            fx:id="logoSky"
            fitWidth="100" fitHeight="65"
            preserveRatio="true"
            AnchorPane.leftAnchor="18" AnchorPane.topAnchor="70">
        <image>
            <Image url="@../img/logo_sky2.jpg"/>
        </image>
    </ImageView>

    <Label text="Últimas Movimentações" fx:id="title"
        AnchorPane.leftAnchor="303" AnchorPane.topAnchor="145"/>

    <TableView fx:id="tableView"
               AnchorPane.leftAnchor="45" AnchorPane.topAnchor="200"
               maxWidth="824" maxHeight="359">
        <columns>
            <TableColumn fx:id="tipoColumn" text="Tipo"/>
            <TableColumn fx:id="numNotaColumn" text="Número da Nota"/>
            <TableColumn fx:id="qtdColumn" text="Quantidade"/>
            <TableColumn fx:id="descricaoColumn" text="Descrição Item"/>
            <TableColumn fx:id="tipoItemColumn" text="Tipo de Item"/>
            <TableColumn fx:id="marcaColumn" text="Nome Marca"/>
            <TableColumn fx:id="obraColumn" text="Nome Obra"/>
            <TableColumn fx:id="usuarioColumn" text="Nome do Usuário"/>
            <TableColumn fx:id="tipoUsuarioColumn" text="Tipo de Usuário"/>
            <TableColumn fx:id="dataColumn" text="Data"/>
        </columns>
    </TableView>
</AnchorPane>
