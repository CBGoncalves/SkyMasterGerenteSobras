<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Button?>
<AnchorPane fx:controller="com.projetos.skymaster.skymastergerentesobras.controllers.item.CadastrarItemController"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="root" fx:id="root"
            prefWidth="900.0" prefHeight="600.0">

    <stylesheets>
        <URL value="@../../css/item/cadastrarItem.css"/>
    </stylesheets>

    <fx:include fx:id="navFuncionario" source="../NavigationBar.fxml" />

    <ImageView
            fx:id="logoSky"
            fitWidth="100" fitHeight="65"
            preserveRatio="true"
            AnchorPane.leftAnchor="18" AnchorPane.topAnchor="70">
        <image>
            <Image url="@../../img/logo_sky.jpg"/>
        </image>
    </ImageView>

    <Label text="Código do Item"
           AnchorPane.leftAnchor="306" AnchorPane.topAnchor="157"/>
    <TextField fx:id="campoCodItem"
               AnchorPane.leftAnchor="306" AnchorPane.topAnchor="177"/>

    <Label text="Tipo de Item"
           AnchorPane.leftAnchor="306" AnchorPane.topAnchor="222"/>
    <ChoiceBox fx:id="campoTipoItem"
               AnchorPane.leftAnchor="306" AnchorPane.topAnchor="242"/>

    <Label text="Descrição"
           AnchorPane.leftAnchor="306" AnchorPane.topAnchor="287"/>
    <TextField fx:id="campoDescricao"
               AnchorPane.leftAnchor="306" AnchorPane.topAnchor="307"/>

    <Label text="Marca"
           AnchorPane.leftAnchor="306" AnchorPane.topAnchor="352"/>
    <ChoiceBox fx:id="campoMarca"
               AnchorPane.leftAnchor="306" AnchorPane.topAnchor="372"/>

    <Button fx:id="btnCadastrar" text="Cadastrar" onAction="#handleCadastrarButtonAction"
            AnchorPane.leftAnchor="462" AnchorPane.topAnchor="432"/>
    <Button fx:id="btnCancelar" text="Cancelar" onAction="#handleCancelarButtonAction"
            AnchorPane.leftAnchor="293" AnchorPane.topAnchor="432"/>


</AnchorPane>
